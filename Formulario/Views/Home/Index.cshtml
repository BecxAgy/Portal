﻿@{
    ViewData["Title"] = "Formulário";
}

<div>
    
    <div class="usuario row"> 
        <h1 class="display-4">Formúlario de Pesquisa</h1>
        <p>Cadastre sua pesquisa aqui.</p>

        <div class="col-4"> 
            <label for="inputNome4" class="nome form-label">Nome</label>
            <input type="text" class="nome form-control" id="inputNome4">
        </div>

        <div class="col-4"> 
            <label for="inputTel" class="telefone form-label">Telefone</label>
            <input type="text" class="telefone form-control" id="inputTel" placeholder="(DD) xxxxx-xxxx">
        </div>

        <div class="col-6"> 
            <label for="inputEmail" class="email form-label">Email</label>
            <input type="email" class="email form-control" id="inputEmail" >   
        </div>
        <div class="col-12 mt-2"> 
            <input class="anonimo form-check-input " type="checkbox" id="gridCheck">
            <label class="fanonimo orm-check-label" for="gridCheck">Anônimo</label>
             
        </div>

    </div>


        <section class="marcadores mt-5">

